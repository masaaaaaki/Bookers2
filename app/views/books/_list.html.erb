<h2>User Info</h2>

<%= attachment_image_tag user, :profile_image, format:"jpeg",fallback:"person.jpg", size:"100x100" %>

<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>


	</tbody>
</table>


<p><%= link_to "", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_4346"  %></p>


<h2>New book</h2>

<%= form_for(book) do |f| %>

	<div class="box">
		<h4>Title</h4>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="box">
		<h4>Opinion</h4>
		<%= f.text_area :body, class: "col-xs-12 book_body"%>
	</div>

	<br><%= f.submit "Create", class:"btn btn-primary col-xs-12" %><br>

<% end %>