<div class="page-header">
	<h1>Bookers</h1>
</div>

<div class="all">
	<h1>Editing Book</h1>

	<%= form_for(@book) do |f| %>
		<div class="box">
			<h4>Title</h4>
			<%= f.text_field :title, class: "book_title" %>
		</div>

		<div class="box">
			<h4>Body</h4>
			<%= f.text_area :body, class: "book_body" %>
		</div>

		<div class="box">
			<p><%= f.submit "Update Book" %></p>
		</div>
	<% end %>

	<div class="box">
		<%= link_to "Show", book_path(@book), class: "show" %>
		<%= link_to "Back", books_path, class: "back" %>
	</div>
</div>