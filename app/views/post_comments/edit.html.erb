<div class="page-header">
	<h1>Bookers</h1>
</div>

<div class="all">
	<h1>コメント編集</h1>

	<%= form_for [@book, @comment] do |f| %>
		<div class="box">
			<h4>コメント</h4>
			<%= f.text_field :comment %>
		</div>

		<div class="box">
			<p><%= f.submit "更新" %></p>
		</div>
	<% end %>

	<div class="box">
		<%= link_to "Show", book_path(@book), class: "show" %>
		<%= link_to "Back", books_path, class: "back" %>
	</div>
</div>
