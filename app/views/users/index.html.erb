<div class="page-header">
	<h1>Bookers</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-3">

			<%= render 'books/list',user: @user,book: @book %>

		</div>
		<div class="col-lg-9">

			<h2>Users</h2>
			<table class="table table-hover table-inverse">


				<thead>
					<tr>
						<th>Image</th>
						<th>Name</th>
						<th></th>
					</tr>
				</thead>

				<% @users.each do |user| %>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(user) do %>
								<%=  attachment_image_tag user, :profile_image, format:"jpeg",fallback:"person.jpg", size:"40x40" %>
							<% end %>
						</td>
						<td><%= user.name %></td>
						<td><%= link_to "show", user_path(user) %></td>
					</tr>
				</tbody>
				<% end %>

			</table>
		</div>

	</div>
</div>




